generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Cliente {
  id         String    @id @default(uuid())
  nome       String
  usuarios   Usuario[]
  unidades   Unidade[]
  planos     Plano[]
  inviteCode String?   @unique
  criadoEm   DateTime  @default(now())
  Aula       Aula[]

  vinculosAlunoProfessor AlunoProfessor[]
  solicitacoesVinculo    SolicitacaoVinculo[]
  recorrencias           Recorrencia[]
}

model Usuario {
  id                         String                       @id @default(uuid())
  nome                       String
  email                      String                       @unique
  senhaHash                  String
  roles                      Role[]                       @default([])
  cliente                    Cliente                      @relation(fields: [clienteId], references: [id])
  clienteId                  String
  aulas                      Aula[]                       @relation("ProfessorAulas")
  agendamentos               Agendamento[]
  criadoEm                   DateTime                     @default(now())
  atualizadoEm               DateTime                     @updatedAt
  emailConfirmado            Boolean                      @default(false)
  tokenConfirmacao           String?
  tokenExpiraEm              DateTime?
  Assinatura                 Assinatura[]
  IndisponibilidadeProfessor IndisponibilidadeProfessor[]

  // Novos campos para perfil
  telefone       String?
  dataNascimento DateTime?
  endereco       String?
  avatarUrl      String?
  preferencias   Json?

  // vínculos professor <-> aluno
  // - como ALUNO nessa relação:
  professoresVinculos AlunoProfessor[] @relation("AlnProfs")
  // - como PROFESSOR nessa relação:
  alunosVinculados    AlunoProfessor[] @relation("ProfAlunos")

  // solicitações de vínculo
  // - como ALUNO solicitando:
  solicitacoesEnviadas  SolicitacaoVinculo[] @relation("AlunoSolicitacoes")
  // - como PROFESSOR recebendo:
  solicitacoesRecebidas SolicitacaoVinculo[] @relation("ProfessorSolicitacoes")

  // recorrências como professor
  recorrencias Recorrencia[]
}

/**
 * Tabela pivot N:N entre usuário-aluno e usuário-professor.
 * Garante isolamento por clienteId e evita vínculos duplicados com @@unique.
 */
model AlunoProfessor {
  id String @id @default(uuid())

  alunoId     String
  professorId String
  clienteId   String

  criadoEm DateTime @default(now())

  aluno     Usuario @relation("AlnProfs", fields: [alunoId], references: [id], onDelete: Cascade)
  professor Usuario @relation("ProfAlunos", fields: [professorId], references: [id], onDelete: Cascade)
  cliente   Cliente @relation(fields: [clienteId], references: [id], onDelete: Cascade)

  // Evita vínculo duplicado (incluindo o cliente para escopo/consultas mais eficientes)
  @@unique([clienteId, alunoId, professorId])
  @@index([professorId])
  @@index([alunoId])
  @@index([clienteId])
}

model Plano {
  id          String       @id @default(uuid())
  nome        String
  duracaoDias Int
  preco       Float
  ativo       Boolean      @default(true)
  cliente     Cliente      @relation(fields: [clienteId], references: [id])
  clienteId   String
  assinaturas Assinatura[]
  criadoEm    DateTime     @default(now())
}

model Assinatura {
  id                  String           @id @default(uuid())
  aluno               Usuario          @relation(fields: [alunoId], references: [id])
  alunoId             String
  plano               Plano            @relation(fields: [planoId], references: [id])
  planoId             String
  dataInicio          DateTime         @default(now())
  dataFim             DateTime
  status              StatusAssinatura
  renovacaoAutomatica Boolean          @default(false)
  tipoAtivacao        TipoAtivacao     @default(ONLINE)
}

model Unidade {
  id           String        @id @default(uuid())
  nome         String
  cidade       String
  cliente      Cliente       @relation(fields: [clienteId], references: [id])
  clienteId    String
  locais       Local[]
  aulas        Aula[]
  recorrencias Recorrencia[]
  criadoEm     DateTime      @default(now())
}

model Local {
  id           String        @id @default(uuid())
  nome         String
  unidade      Unidade       @relation(fields: [unidadeId], references: [id])
  unidadeId    String
  aulas        Aula[]
  recorrencias Recorrencia[]
}

model Recorrencia {
  id                String   @id @default(uuid())
  modalidade        String
  professor         Usuario  @relation(fields: [professorId], references: [id])
  professorId       String
  unidade           Unidade  @relation(fields: [unidadeId], references: [id])
  unidadeId         String
  local             Local    @relation(fields: [localId], references: [id])
  localId           String
  inicio            DateTime
  fim               DateTime
  vagasTotais       Int
  cliente           Cliente  @relation(fields: [clienteId], references: [id])
  clienteId         String
  regra             Json
  janelaGeracaoDias Int      @default(60)
  ativa             Boolean  @default(true)
  criadoEm          DateTime @default(now())
  atualizadoEm      DateTime @updatedAt
  aulas             Aula[]   @relation("RecorrenciaAulas")
}

model Aula {
  id             String        @id @default(uuid())
  modalidade     String
  professor      Usuario       @relation("ProfessorAulas", fields: [professorId], references: [id])
  professorId    String
  unidade        Unidade       @relation(fields: [unidadeId], references: [id])
  unidadeId      String
  local          Local         @relation(fields: [localId], references: [id])
  localId        String
  dataHoraInicio DateTime
  dataHoraFim    DateTime
  vagasTotais    Int
  cliente        Cliente       @relation(fields: [clienteId], references: [id])
  clienteId      String
  agendamentos   Agendamento[]
  criadoEm       DateTime      @default(now())
  atualizadoEm   DateTime      @updatedAt
  // Recorrência
  seriesId       String? // id da Recorrencia
  recorrencia    Recorrencia?  @relation("RecorrenciaAulas", fields: [seriesId], references: [id])
  isException    Boolean       @default(false)
}

model Agendamento {
  id           String            @id @default(uuid())
  aluno        Usuario           @relation(fields: [alunoId], references: [id])
  alunoId      String
  aula         Aula              @relation(fields: [aulaId], references: [id])
  aulaId       String
  status       StatusAgendamento @default(ATIVO)
  criadoEm     DateTime          @default(now())
  atualizadoEm DateTime          @updatedAt

  @@unique([alunoId, aulaId])
}

model IndisponibilidadeProfessor {
  id          String   @id @default(uuid())
  professor   Usuario  @relation(fields: [professorId], references: [id])
  professorId String
  dataInicio  DateTime
  dataFim     DateTime
  motivo      String?
  criadoEm    DateTime @default(now())
}

/**
 * Solicitações de vínculo entre alunos e professores.
 * Permite que alunos solicitem vínculo sem convite direto.
 */
model SolicitacaoVinculo {
  id String @id @default(uuid())

  alunoId     String
  professorId String
  clienteId   String

  status   StatusSolicitacao @default(PENDENTE)
  mensagem String? // Mensagem opcional do aluno
  resposta String? // Resposta do professor/admin

  criadoEm     DateTime  @default(now())
  respondidoEm DateTime?

  aluno     Usuario @relation("AlunoSolicitacoes", fields: [alunoId], references: [id], onDelete: Cascade)
  professor Usuario @relation("ProfessorSolicitacoes", fields: [professorId], references: [id], onDelete: Cascade)
  cliente   Cliente @relation(fields: [clienteId], references: [id], onDelete: Cascade)

  @@unique([clienteId, alunoId, professorId])
  @@index([professorId])
  @@index([alunoId])
  @@index([clienteId])
  @@index([status])
}

enum Role {
  ALUNO
  PROFESSOR
  ADMIN
}

enum Modalidade {
  FUTEVOLEI
  NATACAO
  CT
}

enum StatusAssinatura {
  ATIVO
  INATIVO
  CANCELADO
}

enum StatusAgendamento {
  ATIVO
  CANCELADO
  CONCLUIDO
}

enum TipoAtivacao {
  ONLINE
  MANUAL
}

enum StatusSolicitacao {
  PENDENTE
  APROVADA
  REJEITADA
}
